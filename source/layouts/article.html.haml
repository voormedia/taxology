= wrap_layout :layout do
  %main
    %article.insight
      .container.reading-width
        %a.icon-angle-left{ href: "/insights/" } back to overview
        %h1= current_page.data.title
        .post-meta
          %ul.tags
            - current_page.tags.each do | tag |
              %li
                %a.tag{ class: "tag-#{tag.parameterize}", href: "/insights/topics/#{tag}.html" }
                  = tag

          %p.date= current_page.date.strftime('%e %b %Y')

      %header{ style: "background-image: url('#{current_page.data.featured}');" }
      .container.reading-width
        = yield
        - if current_page.data.author
          %footer
            .avatar{ class: current_page.data.author.parameterize }
            .author
              = current_page.data.author
              .author-description
                - if current_page.data.author = "Jeroen van der Wal"
                  Founder and CEO of the fintech Taxology, which developed the Protocol platform that automates the identification of tax relief entitlement.

    %section.latest-articles.article-list
      .container.reading-width
        %h2 Latest insights
        %section

          - blog.articles[0..2].reject{ |article| article.data.title == current_page.data.title }.each do | latest_article |
            %article
              %a{ href: "/insights/#{latest_article.title.split(" ").join("-").downcase}.html" }
                %figure{ style: "background-image: url('#{latest_article.data.featured}');" }
              %a{ href: "/insights/#{latest_article.title.split(" ").join("-").downcase}.html" }
                %h3= latest_article.title
              %p
                %strong= latest_article.date.strftime('%e %b %Y')
                = latest_article.data.summary
              %a{ href: "/insights/#{latest_article.title.split(" ").join("-").downcase}.html" }
                Read more
                %span.icon-angle-right

